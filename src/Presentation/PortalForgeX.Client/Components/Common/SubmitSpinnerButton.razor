@if (!IsLoading)
{
	<button class="btn @BtnCssClass @CssClass" type="@ButtonType" @onclick="OnClick">@IdleText</button>
}
else
{
	<button class="btn @BtnCssClass @CssClass" type="button" disabled>
		<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
		@LoadingText
	</button>
}

@code {

	[Parameter]
	public bool IsLoading { get; set; }

	[Parameter]
	public string IdleText { get; set; } = "Save";

	[Parameter]
	public string LoadingText { get; set; } = "Loading..";

	[Parameter]
	public string ButtonType { get; set; } = "submit";

	[Parameter]
	public string? CssClass { get; set; }

	[Parameter]
	public string? BtnCssClass { get; set; } = "btn-primary";

	[Parameter]
	public EventCallback OnClick { get; set; }

}
